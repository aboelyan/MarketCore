@model MarketCore.ViewModels.ProductCategoryFormViewModel

<h2>إضافة فئة جديدة</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Category.Name" class="control-label">الاسم</label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category.Number" class="control-label">الرقم</label>
        <input asp-for="Category.Number" class="form-control" />
        <span asp-validation-for="Category.Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category.ParentID" class="control-label">الفئة الأم</label>
        <select asp-for="Category.ParentID" asp-items="Model.ParentCategories" class="form-control">
            <option value="">-- لا يوجد --</option>
        </select>
        <span asp-validation-for="Category.ParentID" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="حفظ" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">رجوع</a>
    </div>
</form>
