@model MarketCore.Models.ProductCategory

<h2>حذف الفئة</h2>

<div>
    <h4>هل أنت متأكد أنك تريد حذف الفئة التالية؟</h4>
    <dl class="row">
        <dt class="col-sm-2">الاسم</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">الرقم</dt>
        <dd class="col-sm-10">@Model.Number</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>
