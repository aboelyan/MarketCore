@model IEnumerable<MarketCore.Models.ProductCategory>

<h2>فئات المنتجات</h2>
<a asp-action="Create" class="btn btn-primary mb-2">إضافة فئة</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الرقم</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Number</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning">تعديل</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">تفاصيل</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
