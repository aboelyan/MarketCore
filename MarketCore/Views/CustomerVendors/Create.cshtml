@model MarketCore.Models.CustomerVendor

@{
    ViewData["Title"] = "إضافة جديد";
}

<h2>إضافة عميل / مورد</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">الاسم</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">الهاتف</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Mobile" class="form-label">الموبايل</label>
        <input asp-for="Mobile" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">العنوان</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="AccountID" class="form-label">رقم الحساب (اختياري)</label>
        <input asp-for="AccountID" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsCustomer" class="form-check-input" />
        <label asp-for="IsCustomer" class="form-check-label">هل هو عميل؟</label>
    </div>

    <button type="submit" class="btn btn-success">حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">رجوع</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
