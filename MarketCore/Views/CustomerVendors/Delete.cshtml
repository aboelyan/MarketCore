@model MarketCore.Models.CustomerVendor

@{
    ViewData["Title"] = "حذف";
}

<h2>تأكيد الحذف</h2>

<div class="alert alert-danger">
    <strong>هل أنت متأكد أنك تريد حذف هذا العميل/المورد؟</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">الاسم</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">الهاتف</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">الموبايل</dt>
    <dd class="col-sm-10">@Model.Mobile</dd>

    <dt class="col-sm-2">النوع</dt>
    <dd class="col-sm-10">
        @(Model.IsCustomer ? "عميل" : "مورد")
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
