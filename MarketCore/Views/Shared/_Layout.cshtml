<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Smart Market</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Smart Market</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <!-- 🔹 إدارة البيانات الأساسية -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="baseDataDropdown" role="button" data-bs-toggle="dropdown">
                            البيانات الأساسية
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="baseDataDropdown">
                            <li><a class="dropdown-item" asp-controller="ProductCategories" asp-action="Index">فئات المنتجات</a></li>
                            <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">الأصناف</a></li>
                            <li><a class="dropdown-item" asp-controller="UnitNames" asp-action="Index">أسماء الوحدات</a></li>
                            <li><a class="dropdown-item" asp-controller="CompanyInfo" asp-action="Edit">بيانات الماركت</a></li>
                        </ul>
                    </li>

                    <!-- 🔹 العملاء والموردين -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="CustomerVendors" asp-action="Index">العملاء والموردين</a>
                    </li>


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            إنشاء فاتورة
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Invoices/Index">🛒  عرض الفواتير</a></li>
                            <li><a class="dropdown-item" href="/Invoices/Create?invoiceType=1">🛒 فاتورة شراء</a></li>        <!-- 1 -->
                            <li><a class="dropdown-item" href="/Invoices/Create?invoiceType=2">💰 فاتورة بيع</a></li>          <!-- 2 -->
                            <li><a class="dropdown-item" href="/Invoices/Create?invoiceType=3">↩️ مرتجع شراء</a></li>         <!-- 3 -->
                            <li><a class="dropdown-item" href="/Invoices/Create?invoiceType=4">↩️ مرتجع بيع</a></li>          <!-- 4 -->

                        </ul>
                    </li>


                    <!-- 🔹 العمليات -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="opsDropdown" role="button" data-bs-toggle="dropdown">
                            العمليات
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="opsDropdown">
                            <li><a class="dropdown-item" href="#">المبيعات</a></li>
                            <li><a class="dropdown-item" href="#">المشتريات</a></li>
                            <li><a class="dropdown-item" href="#">المخزون</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="text-center mt-4 mb-3 text-muted">
        &copy; @DateTime.Now.Year - Smart Market
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
